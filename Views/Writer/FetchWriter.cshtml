@model Library.Models.Entity.tblwriter
@{
    
        ViewBag.Title = "FetchWriter";
        Layout = "~/Views/Shared/Layout.cshtml";
    }

    @using (Html.BeginForm("UpdateWriter", "Writer", FormMethod.Post))
    {
        <div style="margin-bottom:15px"></div>
        <div class=" form-group">
            @Html.HiddenFor(w => w.id)
            @Html.HiddenFor(w => w.id, new { @class = "form-control" })
        </div><br />
        <div>            
            <label>Writer Name</label>
            @Html.TextBoxFor(w => w.name, new { @class = "form-control" })
        </div><br />
        <div>            
            <label>Writer Surname</label>
            @Html.TextBoxFor(w => w.surname, new { @class = "form-control" })
        </div><br />
        <div>          
            <label>Writer Details</label>
            @Html.TextBoxFor(w => w.detail, new { @class = "form-control" })
        </div>
        <br />
        <button class="btn btn-warning">Update</button>
    }


