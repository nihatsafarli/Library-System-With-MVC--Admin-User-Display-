@using Library.Models.Entity
@model Library.Models.Entity.tbluser


@using (Html.BeginForm("Index", "Panel", FormMethod.Post))

{

    <form class="form-horizontal">

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Name</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.name, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Surname</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.surname, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Username</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.username, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Password</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.password, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Photo</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.photo, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">School</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.school, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <div class="checkbox">

                    <label>

                        <input type="checkbox"> I agree to the Conditions <a href="#"></a>

                    </label>

                </div>

            </div>

        </div>

        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <button type="submit" class="btn btn-danger">Update</button>

            </div>

        </div>

    </form>

}