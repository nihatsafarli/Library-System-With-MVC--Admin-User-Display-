@using Library.Models.Entity
@model List<tblcategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Categories</h2>
@using (Html.BeginForm("Index", "Category", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px">
        <b>Type the Name of the Category to Search: &nbsp</b> @Html.TextBox("c") &nbsp
        <input type="submit" value="Search" />
    </div>
}

<table class="table table-bordered">
    <tr>
        <th>Category ID</th>
        <th>Category Name</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.name</td>
            <td><a href="/Category/FetchCategory/@x.id" class="btn btn-warning">Update</a></td>
            <td><a href="/Category/DeleteCategory/@x.id" class="btn btn-danger">Delete</a></td>
        </tr>
    }
</table>
<a href="/Category/NewCategory/" class="btn btn-primary">Add New Category</a>